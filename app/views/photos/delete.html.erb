<h1>Are you sure you want to delete this photo?</h1>
<div class="form-container">
    <p>
        <strong>Image:</strong><br>
        <%= image_tag(@photo.photoLink, alt: @photo.photoDescription) %>
    </p>
    
    <p>
        <strong>Photo Link:</strong>
        <%= link_to truncate(@photo.photoLink, length: 30), @photo.photoLink, target: '_blank' %>
    </p>

    <p>
        <strong>Description:</strong>
        <%= @photo.photoDescription %>
    </p>

    <p>
        <strong>Type:</strong>
        <%= @photo.photoType %>
    </p>

    <p>
        <strong>Page Location:</strong>
        <%= @photo.photoPageLocation %>
    </p>

    <%= form_with url: photo_path(@photo), method: :delete, local: true do %>
        <div class="actions">
            <%= submit_tag 'Delete Photo', data: { confirm: 'Are you sure?' } %>
            <%= link_to 'Cancel', photos_path %>
        </div>
    <% end %>
</div>
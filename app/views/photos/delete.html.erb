<h1>Are you sure you want to delete this photo?</h1>

<p>
    <strong>Photo Link:</strong>
    <%= @photo.url %>
</p>

<p>
    <strong>Description:</strong>
    <%= @photo.description %>
</p>

<p>
    <strong>Displayed in home page?</strong>
    <%= @photo.displayed_in_home_gallery %>
</p>

<p>
    <strong>Associated with project:</strong>
    <% if @photo.project_id %>
        <%= Project.find(@photo.project_id).projectName %>
    <% else %>
        None
    <% end %>
</p>

<%= form_with url: photo_path(@photo), method: :delete, local: true do %>
    <div class="actions">
        <%= submit_tag 'Delete Photo', data: { confirm: 'Are you sure?' } %>
        <%= link_to 'Cancel', photos_path %>
    </div>
<% end %>

<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :projectName, "Project Name", style: "display: block" %>
    <%= form.text_field :projectName %>
  </div>

  <div>
    <%= form.label :projectDesc, "Project Description", style: "display: block" %>
    <%= form.text_area :projectDesc, rows: 10, cols: 50 %>
  </div>

  <div>
    <%= form.label :locationID, "Location ID", style: "display: block" %>
    <%= form.number_field :locationID %>
  </div>

  <div>
    <%= form.label :projectStartDate, "Project Start Date", style: "display: block" %>
    <%= form.date_field :projectStartDate %>
  </div>

  <div>
    <%= form.label :isProjectActive, "Is the Project Active?", style: "display: block" %>
    <%= form.check_box :isProjectActive %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

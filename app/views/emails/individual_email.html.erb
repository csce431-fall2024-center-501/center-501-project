<h1>Send Individual Mail</h1>

<%= form_with url: send_email_path, method: :post, local: true do |form| %>
    <div class="field">
        <%= form.label :to, "To:" %>
        <%= form.text_field :recipients %>
    </div>

    <div class="field">
        <%= form.label :subject, "Subject:" %>
        <%= form.text_field :subject %>
    </div>

    <div class="field">
        <%= form.label :message, "Body:" %>
        <%= form.text_area :message %>
    </div>

    <div class="actions">
        <%= form.submit "Send" %>
    </div>
<% end %>
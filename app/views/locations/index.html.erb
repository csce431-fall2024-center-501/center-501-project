<h1>Locations</h1>

<table class="table-locations">
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip Code</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.address, location, class: "location-link" %></td>
        <td><%= location.city %></td>
        <td><%= location.state %></td>
        <td><%= location.zip_code %></td>
        <td><%= location.country %></td>
        <td><%= link_to 'Show', location, class: "location-link" %></td>
        <td><%= link_to 'Edit', edit_location_path(location), class: "location-link" %></td>
        <td><%= link_to 'Delete', delete_location_path(location), method: :get, class: "location-link delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Location', new_location_path, class: "location-link" %>
<h1>Users</h1>

<%= form_with url: users_path, method: :get, local: true do %>
  <div>
    <%= label_tag :search, "Search by name" %>
    <%= text_field_tag :search, params[:search] %>
    <% if @select_attributes.present? %>
      <% @select_attributes.each do |attribute| %>
        <%= hidden_field_tag "select_attributes[]", attribute %>
      <% end %>
    <% end %>
    <%= submit_tag "Search" %>
  </div>
<% end %>

<%= form_with url: users_path, method: :get, local: true do %>
  <div>
    <p>Select attributes to display:</p>
    <% @attributes.each do |attribute| %>
      <%= puts "here #{@select_attributes} #{attribute}" %>
      <%= check_box_tag "select_attributes[]", attribute.to_s, @select_attributes&.map(&:to_s)&.include?(attribute.to_s), id: "attributes_#{attribute}" %>
      <%= label_tag "attributes_#{attribute}", attribute.to_s.humanize %><br>
      <%= hidden_field_tag :search, params[:search]%>
    <% end %>
    <%= submit_tag "Update Table" %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <% @select_attributes&.each do |attribute| %>
        <th><%= link_to attribute.to_s.humanize, users_path(sort: attribute, direction: params[:direction] == 'asc' ? 'desc' : 'asc', select_attributes: @select_attributes, search: params[:search]) %></th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <% @select_attributes&.each do |attribute| %>
          <td><%= user.send(attribute) %></td>
        <% end %>
        <td><%= link_to 'Show', user %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Delete', delete_user_path(user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.admin? %>
  <%= link_to 'New User', new_user_path %>
<% end %>

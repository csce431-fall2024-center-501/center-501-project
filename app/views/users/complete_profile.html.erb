<h1>Complete Your Profile</h1>

<% if flash[:notice] %>
  <div class="flash notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="flash alert">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with(model: @user, url: update_profile_users_path, local: true) do |f| %>
  <div class="field">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, placeholder: "Phone Number" %>
  </div>

  <div class="field">
    <%= f.label :class_year %>
    <%= f.number_field :class_year, placeholder: "Class Year" %>
  </div>

  <div class="field">
    <%= f.label :linkedin_url %><br>
    <%= f.text_field :linkedin_url, placeholder: "LinkedIn URL" %>
  </div>

  <div class="field">
    <%= f.label :ring_date %>
    <%= f.date_select :ring_date %>
  </div>

  <div class="field">
    <%= f.label :grad_date %>
    <%= f.date_select :grad_date %>
  </div>

  <div class="field">
    <%= f.label :birthday %>
    <%= f.date_select :birthday, start_year: 1999, end_year: 2007 %>
  </div>

  <div class="field">
    <%= f.label :shirt_size %><br>
    <%= f.select :shirt_size, ['XS', 'S', 'M', 'L', 'XL'] %>
  </div>

  <div class="field">
    <%= f.label :dietary_restriction %><br>
    <%= f.select :dietary_restriction, ['None', 'Vegetarian', 'Vegan', 'Dairy-free', 'Nuts-free'], selected: @user.dietary_restriction %>
  </div>

  <div class="actions">
    <%= f.submit "Update Profile" %>
  </div>
<% end %>
